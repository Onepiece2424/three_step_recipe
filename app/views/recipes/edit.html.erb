<div class="main_page">
  <div class="main_in_page">
    <h3>Edit a new recipe</h3>
    <div class="main">
      <%= form_with model: @recipe do |form| %>
        <div class="container flexbox">
          <div class="row main_procedure">
            <div class="sub_process col-12">
              <%= form.label :title, 'Recipe Title' %>
              <%= form.text_field :title  %>
            </div>
            <div class="sub_process col-12">
              <%= form.label :process1, 'Recipe procedure①' %>
              <%= form.text_field :process1 %>
            </div>
            <div class="sub_process col-12">
              <%= form.label :process2, 'Recipe procedure②' %>
              <%= form.text_field :process2 %>
            </div>
            <div class="sub_process col-12">
              <%= form.label :process3, 'Recipe procedure③' %>
              <%= form.text_field :process3 %>
            </div>
            <div class="sub_process col-12">
              <%= form.label :images, 'レシピ画像変更' %>
              <%= form.file_field :images, multiple: true %>
            </div>
          </div>
        </div>
        <div class="new_button">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
