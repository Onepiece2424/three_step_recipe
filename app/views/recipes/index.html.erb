                  <% end %>
                <% else %>
                  <p><span>お気に入り数: </span><%= recipe.favorites.count %></p>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <br>
    <br>
    <div class="container main_page_my_recipe_container">
      <div class="row my_recipe_row">
        <div class="my_recipe_title col-sm-12">
