<h3>Create a new recipe</h3>

<div class="main">
  <%= form_with model: @recipe do |form| %>
  <div class="flexbox">
    <div class="main_procedure">
      <div class="sub_process">
        <%= form.label :title, 'Recipe Title' %>
        <%= form.text_field :title  %>
      </div>
      <div class="sub_process">
        <%= form.label :process1, 'Recipe procedure①' %>
        <%= form.text_field :process1 %>
      </div>
      <div class="sub_process">
        <%= form.label :process2, 'Recipe procedure②' %>
        <%= form.text_field :process2 %>
      </div>
      <div class="sub_process">
        <%= form.label :process3, 'Recipe procedure③' %>
        <%= form.text_field :process3 %>
      </div>
      <div class="sub_process">
        <%= form.label :images, "レシピの手順数に合わせて画像を投稿しよう！", class: "image_input_btn" %>
        <%= form.file_field :images, multiple: true, class: "image_form" %>
      </div>
    </div>
  </div>
  <div class="new_button">
    <%= form.submit :class=>"btn" %>
  </div>
  <% end %>
</div>
